<?xml version="1.0" encoding="UTF-8"?>
<!-- Logback configuration file -->

<configuration>

	<!-- Include default Spring Boot Logback settings -->
	<include
		resource="org/springframework/boot/logging/logback/defaults.xml" />

	<!-- Read Spring application name from application.yml / application.properties -->
	<springProperty scope="context" name="application_name"
		source="spring.application.name" />

	<!-- Define custom console log pattern -->
	<property name="CONSOLE_LOG_PATTERN"
		value="%d{yyyy-MM-dd HH:mm:ss.SSS}%d{Z}
		|severity=%level
		|pid=${PID:-}
		|service=${application_name}
		|trace=%X{X-B3-TraceId}
		|span=%X{X-B3-SpanId}
		|thread=%t
		|class=%c{40}
		|message=%replace(%msg){'\n', '\t'}%n" />

	<!-- Console appender to print logs to standard output -->
	<appender name="jsonConsoleAppender"
		class="ch.qos.logback.core.ConsoleAppender">

		<!-- Use pattern-based layout -->
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>${CONSOLE_LOG_PATTERN}</pattern>
		</layout>
	</appender>

	<!-- Asynchronous appender to improve performance -->
	<appender name="Async-Console-Appender"
		class="ch.qos.logback.classic.AsyncAppender">

		<!-- Queue size for async logging -->
		<queueSize>512</queueSize>

		<!-- Reference to console appender -->
		<appender-ref ref="jsonConsoleAppender" />

	</appender>

	<!-- Application-specific logging configuration -->
	<logger name="com.example" level="DEBUG" additivity="false">
		<appender-ref ref="Async-Console-Appender" />
	</logger>

	<!-- Spring framework logs set to WARN level -->
	<logger name="org.springframework" level="WARN"
		additivity="false">
		<appender-ref ref="Async-Console-Appender" />
	</logger>

	<!-- Root logger configuration -->
	<root level="INFO">
		<appender-ref ref="Async-Console-Appender" />
	</root>

</configuration>
